<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/rl_firstrun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/firstrun_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/firstrun_image_padding_top"
            android:paddingBottom="@dimen/firstrun_image_padding_bottom" />

        <TextView
            android:id="@+id/firstrun_text"
            android:layout_width="@dimen/firstrun_content_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstrun_image"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.FirstrunLight.Main" />

        <TextView
            android:id="@+id/firstrun_subtext"
            android:layout_width="@dimen/firstrun_content_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstrun_text"
            android:paddingTop="10dp"
            android:paddingBottom="50dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.FirstrunRegular.Body" />

        <LinearLayout
            android:id="@+id/firstrun_layout_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingBottom="29dp"
            android:padding="25dp">

            <TextView
                android:id="@+id/firstrun_notnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:textAppearance="@style/TextAppearance.FirstrunRegular.LinkSkip"
                android:textAllCaps="true"
                android:text="@string/firstrun_button_notnow" />

            <TextView
                android:id="@+id/firstrun_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="@string/firstrun_button_next"
                android:textAppearance="@style/TextAppearance.FirstrunRegular.LinkNext"
                android:textAllCaps="true" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.3dp"
            android:layout_alignTop="@id/firstrun_layout_links"
            android:background="#eaeaea" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="@drawable/gradient_qwant" />

        <!-- Useless, but for compilation purpose -->
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/firstrun_switch"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="invisible"/>
    </RelativeLayout>
</ScrollView>
